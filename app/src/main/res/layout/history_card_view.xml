<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/history_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/card_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Main_background_color"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Driver_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:src="@drawable/person"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/Driver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:text="Mohamed Mustafa"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/card_middel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_start"
            android:background="@color/card_grey"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Trip_start_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/location_icon"
                android:text="From: Aga-Mansoura"
                android:textColor="@color/Main_background_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:drawableLeft="@drawable/ic_more_vert_black_24dp"
                android:textColor="@color/Main_background_color" />

            <TextView
                android:id="@+id/Trip_end_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/location_icon"
                android:text="To: Giza"
                android:textColor="@color/Main_background_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/card_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_middel"
            android:background="@color/card_bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Trip_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_date_range_black_24dp"
                android:drawablePadding="5dp"
                android:drawableTint="@color/white"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Date: 17/2/2018"
                android:textColor="@color/white" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/card_bottom"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:tint="@color/white" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>